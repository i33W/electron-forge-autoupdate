{
  "name": "electron-darkmode",
  "version": "1.0.0",
  "description": "Electron Dark mode practice!",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i33W/electron-forge-autoupdate.git"
  },
  "author": "hwang bomee <hwangbomee@kakao.com>",
  "bugs": {
    "url": "https://github.com/i33W/electron-forge-autoupdate/issues"
  },
  "homepage": "https://github.com/i33W/electron-forge-autoupdate#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "electron": "^16.0.7"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "img/favicon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_darkmode",
            "setupIcon": "img/favicon.ico",
            "loadingGif": "img/loading.gif",
            "remoteReleases": "https://github.com/i33W/electron-forge-autoupdate.git"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
